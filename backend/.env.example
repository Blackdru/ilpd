PORT=5000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Secret (for additional security if needed)
JWT_SECRET=your_jwt_secret_key

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Services Configuration (Using GLM-4.5 Air free model through OpenRouter)
OPENAI_API_KEY=your_openai_api_key
OPENROUTER_API_KEY=your_openrouter_api_key
AI_MODEL=zhipuai/glm-4-air
EMBEDDING_MODEL=text-embedding-3-small

# Redis Configuration (for job queues)
REDIS_URL=redis://localhost:6379

# OCR Configuration
OCR_LANGUAGES=eng,spa,fra,deu
OCR_CONFIDENCE_THRESHOLD=0.7

# AI Features Toggle
ENABLE_AI_FEATURES=true
ENABLE_OCR=true
ENABLE_CHAT_PDF=true
ENABLE_SUMMARIZATION=true

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_PRO=price_your_pro_price_id
STRIPE_PRICE_ID_PREMIUM=price_your_premium_price_id

# Subscription Configuration
ENABLE_SUBSCRIPTIONS=true
DEFAULT_PLAN=free
TRIAL_PERIOD_DAYS=7